use Alto\Favicon\Command\GenerateFaviconCommand;
use Symfony\Component\Console\Application;

$autoloadFiles = [
    __DIR__.'/../vendor/autoload.php',
    __DIR__.'/../../../autoload.php',
];

$autoloader = null;
foreach ($autoloadFiles as $file) {
    if (file_exists($file)) {
        $autoloader = require $file;
        break;
    }
}

if (null === $autoloader) {
    fwrite(STDERR, "Error: Autoload file not found.\n");
    exit(1);
}

$application = new Application('Alto Favicon', '1.0.0');
$application->addCommand(new GenerateFaviconCommand());
$application->setDefaultCommand(GenerateFaviconCommand::NAME, true);

exit($application->run());
